
// Define the pins connected to the LEDs
const int ledPins[] = {2, 3, 4, 5, 6, 7, 8};
const int numLeds = 7;

void setup() {
  // Initialize the digital pins as outputs
  for (int i = 0; i < numLeds; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

